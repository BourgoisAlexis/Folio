@using Folio.Models;
@inherits LayoutComponentBase

<PageTitle>MyApp</PageTitle>

<div class="page flex-column">
    <div class="topbar w-100 sticky-top">
        <NavMenu />
    </div>
    <div class="m-3">
        @Body
    </div>
</div>

<style>
    h1 {
        font-size:3rem;
        text-align: center;
        margin: 0.5rem 0 1rem 0;
    }

    h2 {
        font-size:2rem;
        text-align: center;
        margin: 0.5rem 0 0.25rem 0;
    }

    .page {
        font-family: Roboto;
        background-color: @AppConst.dark;
        color: @AppConst.light;
    }

    .topbar {
        height: 4rem;
        background-color: @AppConst.color;
    }

    .stacked {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        text-align: center;
        justify-content: center;
    }

    .stacker {
        position: relative;
    }

    .animated {
        transition-duration: @(AppConst.duration);
        transition-timing-function: ease-out;
    }
</style>
